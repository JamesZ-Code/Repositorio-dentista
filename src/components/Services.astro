---
const services = [
    { title: "Implantes Dentales", desc: "Recupera la funcionalidad completa de tu boca." },
    { title: "Ortodoncia", desc: "Alineacion perfecta con brackets o alineadores invisibles." },
    { title: "Estetica Dental", desc: "Blanqueamientos y carillas para una sonrisa radiante." }
];
---

<section id="servicios" class="services">
    <div class="container">
        <div class="section-header">
            <h2>Nuestros Servicios</h2>
            <div class="separator"></div>
        </div>
        
        <div class="grid">
            {services.map(service => (
                <div class="card">
                    <h3>{service.title}</h3>
                    <p>{service.desc}</p>
                    <a href="#" class="learn-more">Leer mas &rarr;</a>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .services {
        padding: 5rem 0;
        background-color: #0f0f0f;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    h2 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .separator {
        width: 60px;
        height: 4px;
        background-color: var(--color-primary);
        margin: 0 auto;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .card {
        background-color: var(--color-surface);
        padding: 2rem;
        border-radius: 8px;
        border-top: 3px solid transparent;
        transition: transform 0.3s, border-color 0.3s;
    }

    .card:hover {
        transform: translateY(-5px);
        border-color: var(--color-primary);
    }

    .card h3 {
        color: var(--color-primary);
        margin-top: 0;
    }

    .card p {
        color: var(--color-text-muted);
    }

    .learn-more {
        color: var(--color-text);
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 700;
        margin-top: 1rem;
        display: inline-block;
    }
</style>